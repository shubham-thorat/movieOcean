{
  "name": "moviesapp",
  "version": "1.0.0",
  "description": "Movies App where you can watch your favourite movies",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
